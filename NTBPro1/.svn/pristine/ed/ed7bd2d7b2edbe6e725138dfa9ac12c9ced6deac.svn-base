@charset "UTF-8";

	.closeBtn_addList{
		margin: 20px 20px 0 0; 
		background: silver;
		padding: 5px 10px;
		border-radius: 4px;
		cursor: pointer;
		float : right;
	}
		
	.bg_addList {
		display: none; /* Hidden by default */
		position: fixed; /* Stay in place */
		z-index: 10; /* Sit on top */
		left: 0;
		top: 0;
		width: 100%; /* Full width */
		height: 100%; /* Full height */
		overflow: auto; /* Enable scroll if needed */
		background-color: rgb(0,0,0); /* Fallback color */
		background-color: rgba(0,0,0,0.4); /* Black w/ opacity */    
    }

    .modalBox_addList {
        position: fixed;
		background-color: #FEFEFE;
		top: calc(50% - 300px);
		margin-left: calc(50% - 400px); /* 15% from the top and centered */
		border: 1px solid #888;
		width: 800px; /* Could be more or less, depending on screen size */
		height: 800px;
    }


	tr{
		text-align: center;
	}
	.label_addList{
		font-size: 20px;
		font-weight: bold;
		margin-right: 20px;
	}

	.header_addList{
		width : 730px;
		text-align: center;
		float: right;
	}
	.body_addList{
		width : 750px;
		height : 670px;
		float : right;
	}
	.tbl_addList{
		width : 600px;
		height: 520px;
	}
	.footer_addList{
		clear: right;
