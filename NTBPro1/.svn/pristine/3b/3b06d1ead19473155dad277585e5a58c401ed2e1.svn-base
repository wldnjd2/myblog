@charset "UTF-8";

.closeBtn_addList{
		background: silver;
		padding: 5px 10px;
		border-radius: 4px;
		cursor: pointer;
		float : right;
	}
	
	.modal_addList {
		position: fixed;
		top : 0;
		left: 0;
		width: 100%;
		height: 100%;
		display: none;
		justify-content: center;
		align-items: center;
	}
	
	.modal_addList .bg {
          width: 100%;
          height: 100%;
          background-color: rgba(0, 0, 0, 0.6);
        }

     .modalBox {
      	  position: absolute;
          background-color: #fff;
          width: 700px;
          height: 800px;
          padding: 15px;
        }


	tr{
		text-align: center;
	}
	.label_addList{
		font-size: 20px;
		font-weight: bold;
		margin-right: 20px;
	}

	.header_addList{
		width : 670px;
		text-align: center;
		float: right;
	}
	.body_addList{
		width : 670px;
		height : 670px;
		float : right;
	}
	.tbl_addList{
		width : 600px;
		height: 520px;
	}
	.footer_addList{
		clear: right;
		text-align: center;
	}
	.category_div{
		height : 50px;
	}
	.title_div{
		height: 50px;
	}
	.title_div>.label_addList{
		margin-right: 60px;
	}
	.file_div{
		margin-top : 15px;
	}
	.image_div{
		margin-top : 15px;
	}
	.image_div>.label_addList{
		margin-right: 40px;
	}
	
	
	/* CKEditor */
	.ck.ck-editor{
		max-width: 700px;
	}
	.ck-editor__editable{
		min-height: 400px;
		max-height: 400px;
	}
	